@import '../../node_modules/vuetify/src/stylus/bootstrap'
@import '../../node_modules/vuetify/src/stylus/theme'

icon($material)
  fill: $material.icons.active

  &:disabled
    fill: $material.icons.inactive

theme(icon, "icon")

.white--text
.white--text .v-icon
  fill: #fff !important

.primary--text.v-icon
  fill: $theme.primary !important

svg.v-icon
  display: inline-block

.v-icon--large
  transform: scale(1.5)
  transform-origin: left top

.theme--light .stepper .stepper__step__step .v-icon
  fill: #fff

.stepper__step__step .v-icon
  transform: scale(0.75)

.application .theme--dark.btn .v-icon
  fill: #fff

.datatable thead th .v-icon svg
  width: 14px
  height: 14px
  margin-top 2px
  margin-bottom 1px

.datatable thead th.column.sortable.active.desc i
  transform-origin: center 9px !important

.theme--light .btn.btn--disabled .v-icon
  fill: rgba(0,0,0,0.26) !important

.theme--dark .btn.btn--disabled .v-icon
  fill: rgba(255,255,255,0.3) !important
