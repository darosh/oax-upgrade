.markdown
  //code, pre
  //  font-weight: normal !important
  //max-width: 100%
  //-ms-text-size-adjust: 100%
  //-webkit-text-size-adjust: 100%
  font-size: 15px
  font-weight: 400
  line-height: 1.5
  word-wrap: break-word

  a
    -webkit-text-decoration-skip: objects
    background-color: transparent
    text-decoration: none
    &:hover
      text-decoration: underline
    &:not([href])
      color: inherit
      text-decoration: none
  strong
    font-weight: 500
  h1
    font-size: 32px
    font-weight: 500
    margin: 0.67em 0
    padding-bottom: 0.3em
  img
    border-style: none
    box-sizing: content-box
    max-width: 100%
  svg
    &:not(:root)
      overflow: hidden

  hr
    background-color: $material-light.dividers
    border: none
    display: block
    height: 1px
    -webkit-box-flex: 1
    flex: 1
    width: 100%
    padding: 0
    margin: 24px 0

  *
    box-sizing: border-box
  table
    border-spacing: 0
    border-collapse: collapse
    display: block
    width: 100%
    overflow: auto
    th
      font-weight: 500
    tr, td, th
      border: 1px solid $material-light.dividers

  h2
    font-size: 24px
    font-weight: 500
    padding-bottom: 0.3em
  h3
    font-size: 20px
    font-weight: 500
  h4
    font-size: 16px
    font-weight: 500
  h5
    font-size: 14px
    font-weight: 700
  h6
    font-size: 12px
    font-weight: 700
  p
    margin-bottom: 10px
    margin-top: 0
  blockquote
    border-left: 4px solid $material-light.dividers
    margin: 0
    padding: 0 1em
    & > :first-child
      margin-top: 0
    & > :last-child
      margin-bottom: 0
  dd
    margin-left: 0
  code
    border-radius: 3px
    font-family: "Roboto Mono", monospace
    font-weight: 400 !important
    //font-size: 12px
    background-color: $material-light.dividers
    margin: 0
    padding: 0
    padding-bottom: 0.2em
    padding-top: 0.2em
  pre
    overflow-x auto
    font: 12px "Roboto Mono", monospace
    margin-bottom: 0
    margin-top: 0
    word-wrap: normal
    & > code
      padding: 0
      margin: 0
      font-size: 100%
      word-break: normal
      white-space: pre
      background: transparent
      border: 0
      font-weight: 300 !important
    code
      display: inline
      max-width: auto
      padding: 0
      margin: 0
      overflow: visible
      line-height: inherit
      word-wrap: normal
      background-color: transparent
      border: 0
      box-shadow: none
  &::before
    display: table
    content: ""
  &::after
    display: table
    clear: both
    content: ""
  & > *:first-child
    margin-top: 0 !important
  & > *:last-child
    margin-bottom: 0 !important
  .anchor
    float: left
    padding-right: 4px
    margin-left: -20px
    line-height: 1
    &:focus
      outline: none
  //kbd
  //background-color rgba(#888, .8)
  kbd + kbd
    margin-left 4px
  li
    & > p
      margin-top: 16px
    & + li
      margin-top: .25em
  dl
    padding: 0

    dt
      font-size: 1em
      font-style: italic
      font-weight: 500
      margin-top: 16px
      padding: 0
    dd
      margin-bottom: 16px
      padding: 0 16px

.markdown a:active,
.markdown a:hover
  outline-width: 0

.markdown code,
.markdown kbd,
.markdown pre
  font-family: "Roboto Mono", monospace
  //font-size: 1em

.markdown td,
.markdown th
  padding: 0

.markdown h1,
.markdown h2,
.markdown h3,
.markdown h4,
.markdown h5,
.markdown h6
  line-height: 1.25
  margin-bottom: 16px
  margin-top: 24px

.markdown ul,
.markdown ol
  margin-bottom: 0
  margin-top: 0
  padding-left: 2em

.markdown ol ol,
.markdown ul ol
  list-style-type: lower-roman

.markdown ul ul ol,
.markdown ul ol ol,
.markdown ol ul ol,
.markdown ol ol ol
  list-style-type: lower-alpha

.markdown p,
.markdown blockquote,
.markdown ul,
.markdown ol,
.markdown dl,
.markdown table,
.markdown pre
  margin-bottom: 16px
  margin-top: 0

.markdown ul ul,
.markdown ul ol,
.markdown ol ol,
.markdown ol ul
  margin-bottom: 0
  margin-top: 0

.markdown table th,
.markdown table td
  padding: 6px 13px

.markdown code::before,
.markdown code::after
  content: "\00a0"
  letter-spacing: -.2em

.markdown pre
  background-color: $material-light.background
  border: 1px solid $material-light.dividers
  border-radius: 4px
  font-size: 14px
  line-height: 20px
  overflow: auto
  padding: 16px

.markdown pre code::before,
.markdown pre code::after
  content: normal

.task-list-item input
